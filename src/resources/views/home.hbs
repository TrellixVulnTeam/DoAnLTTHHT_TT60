<div class="container">
    <div class="mt-5">
        <div class="row">
            {{#each courses}}
            <div class="col-4">
                <div class="card mt-4">
                    <a href="/courses/{{this.path}}">
                        <img class="card-img-top" src={{this.image}} alt="">
                    </a>
                    <div class="card-body">
                        <h4 class="card-title">{{this.name}}</h4>
                        <p class="card-text">{{this.description}}</p>
                        <a href="/courses/{{this.path}}" class=" btn btn-primary">Detail</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>